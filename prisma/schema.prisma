generator client {
  provider = "prisma-client-js"
  engineType = "binary"
}

datasource db {
  provider = "postgresql"
}

model CardPack {
  id          Int      @id @default(autoincrement())
  name        String
  releaseDate DateTime
  decks       Deck[]
}

model Deck {
  id          Int       @id @default(autoincrement())
  name        String
  deckClass   DeckClass
  cardPackId  Int
  cardPack    CardPack  @relation(fields: [cardPackId], references: [id])
  matchups    Matchup[]  @relation("Deck1")
  matchups2   Matchup[]  @relation("Deck2")
  matchRecords MatchRecord[] @relation("MatchRecordDeck")
  opponentRecords MatchRecord[] @relation("MatchRecordOpponent")
}

enum DeckClass {
  ELF
  ROYAL
  WITCH
  NIGHTMARE
  DRAGON
  BISHOP
  NEMESIS
}

model Matchup {
  id          Int      @id @default(autoincrement())
  deck1Id     Int
  deck2Id     Int
  userId      Int
  deck1       Deck     @relation("Deck1", fields: [deck1Id], references: [id])
  deck2       Deck     @relation("Deck2", fields: [deck2Id], references: [id])
  user        User     @relation(fields: [userId], references: [id])
  winRate     Float

  @@unique([deck1Id, deck2Id, userId])
}

model MatchRecord {
  id             Int         @id @default(autoincrement())
  deckId         Int
  opponentDeckId Int
  userId         Int
  deck           Deck        @relation("MatchRecordDeck", fields: [deckId], references: [id])
  opponentDeck   Deck        @relation("MatchRecordOpponent", fields: [opponentDeckId], references: [id])
  user           User        @relation(fields: [userId], references: [id])
  turn           MatchTurn
  result         MatchResult
  note           String      @db.Text
  createdAt      DateTime    @default(now())

  @@index([deckId])
  @@index([opponentDeckId])
  @@index([userId])
}

model User {
  id           Int       @id @default(autoincrement())
  loginId      String    @unique
  name         String
  passwordHash String
  role         UserRole  @default(MEMBER)
  isPublic     Boolean   @default(false)
  createdAt    DateTime  @default(now())
  matchups     Matchup[]
  matchRecords MatchRecord[]

  @@map("users")
}

enum UserRole {
  ADMIN
  MEMBER
}

enum MatchTurn {
  FIRST
  SECOND
}

enum MatchResult {
  WIN
  LOSS
}
